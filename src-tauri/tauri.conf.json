{
    "productName": "Zaku",
    "identifier": "app.zaku",
    "build": {
        "beforeDevCommand": "pnpm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Zaku",
                "width": 1180,
                "height": 755,
                "minWidth": 800,
                "minHeight": 512,
                "visible": false,
                "decorations": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "dragDropEnabled": false,
                "trafficLightPosition": {
                    "x": 14,
                    "y": 16
                }
            }
        ],
        "security": {
            "csp": null,
            "capabilities": ["main"]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": ["assets/**/*"]
    },
    "plugins": {}
}
