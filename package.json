{
    "name": "zaku",
    "version": "0.5.0",
    "description": "Fast, open-source API client with fangs",
    "license": "MIT",
    "author": "Mayank Verma <errmayank@gmail.com>",
    "repository": "https://github.com/buildzaku/zaku",
    "homepage": "https://zaku.app",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint . --max-warnings=0",
        "format": "prettier --write \"**/*.{svelte,js,cjs,mjs,ts,cts,mts,json,md,yaml,yml}\"",
        "format-check": "prettier --check \"**/*.{svelte,js,cjs,mjs,ts,cts,mts,json,md,yaml,yml}\"",
        "sync-pnpm-lock": "pnpm install --lockfile-only",
        "sync-cargo-lock": "cd ./src-tauri && cargo check",
        "sync-metadata": "cd ./scripts/sync-metadata && cargo run && pnpm run sync-pnpm-lock && pnpm run sync-cargo-lock",
        "changeset-add": "changeset add",
        "changeset-status": "changeset status --verbose",
        "changeset-version": "changeset version && pnpm run sync-metadata && pnpm run format",
        "changeset-tag": "changeset tag",
        "tauri": "tauri"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.2",
        "@eslint/compat": "1.2.8",
        "@eslint/js": "9.25.1",
        "@lucide/svelte": "0.525.0",
        "@sveltejs/adapter-static": "3.0.8",
        "@sveltejs/kit": "2.20.7",
        "@sveltejs/vite-plugin-svelte": "5.0.3",
        "@tailwindcss/vite": "4.1.4",
        "@tauri-apps/cli": "2.5.0",
        "@types/eslint": "9.6.1",
        "bits-ui": "1.3.19",
        "changesets-changelog-compact": "0.1.3",
        "clsx": "2.1.1",
        "eslint": "9.25.1",
        "eslint-config-prettier": "10.1.2",
        "eslint-plugin-svelte": "3.5.1",
        "globals": "16.0.0",
        "mode-watcher": "1.0.2",
        "paneforge": "1.0.0-next.5",
        "prettier": "3.5.3",
        "prettier-plugin-svelte": "3.3.3",
        "prettier-plugin-tailwindcss": "0.6.11",
        "svelte": "5.28.2",
        "svelte-check": "4.1.6",
        "svelte-sonner": "0.3.28",
        "tailwind-merge": "3.3.1",
        "tailwind-variants": "1.0.0",
        "tailwindcss": "4.1.4",
        "tslib": "2.8.1",
        "typescript": "5.8.3",
        "typescript-eslint": "8.31.0",
        "vite": "6.3.3"
    },
    "dependencies": {
        "@codemirror/commands": "6.8.1",
        "@codemirror/lang-html": "6.4.9",
        "@codemirror/lang-json": "6.0.1",
        "@codemirror/lang-xml": "6.1.0",
        "@codemirror/language": "6.11.0",
        "@codemirror/search": "6.5.10",
        "@codemirror/state": "6.5.2",
        "@codemirror/view": "6.36.6",
        "@lezer/highlight": "1.2.1",
        "@tauri-apps/api": "2.5.0",
        "codemirror": "6.0.1"
    }
}
