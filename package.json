{
    "name": "zaku",
    "version": "0.2.0",
    "description": "Fast, open-source API client with fangs",
    "license": "MIT",
    "author": "Mayank Verma <errmayank@gmail.com>",
    "repository": "https://github.com/buildzaku/zaku",
    "homepage": "https://zaku.app",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint . --max-warnings=0",
        "format": "prettier --write \"**/*.{svelte,js,cjs,mjs,ts,cts,mts,json,md,yaml,yml}\"",
        "format-check": "prettier --check \"**/*.{svelte,js,cjs,mjs,ts,cts,mts,json,md,yaml,yml}\"",
        "sync-pnpm-lock": "pnpm install --lockfile-only",
        "sync-cargo-lock": "cd ./src-tauri && cargo check",
        "sync-metadata": "cd ./scripts/sync-metadata && cargo run && pnpm run sync-pnpm-lock && pnpm run sync-cargo-lock",
        "changeset-add": "changeset add",
        "changeset-status": "changeset status --verbose",
        "changeset-version": "changeset version && pnpm run sync-metadata && pnpm run format",
        "changeset-tag": "changeset tag",
        "tauri": "tauri"
    },
    "devDependencies": {
        "@changesets/cli": "2.27.9",
        "@sveltejs/adapter-static": "3.0.5",
        "@sveltejs/kit": "2.7.0",
        "@sveltejs/vite-plugin-svelte": "3.1.2",
        "@tauri-apps/cli": "2.0.3",
        "@types/eslint": "9.6.1",
        "autoprefixer": "10.4.20",
        "changesets-changelog-compact": "0.1.3",
        "eslint": "9.12.0",
        "eslint-plugin-svelte": "2.44.1",
        "globals": "15.11.0",
        "postcss": "8.4.47",
        "prettier": "3.3.3",
        "prettier-plugin-svelte": "3.2.7",
        "prettier-plugin-tailwindcss": "0.6.8",
        "svelte": "4.2.19",
        "svelte-check": "4.0.5",
        "tailwindcss": "3.4.13",
        "tslib": "2.7.0",
        "typescript": "5.6.3",
        "typescript-eslint": "8.8.1",
        "vite": "5.4.9"
    },
    "dependencies": {
        "@codemirror/commands": "6.7.0",
        "@codemirror/lang-html": "6.4.9",
        "@codemirror/lang-json": "6.0.1",
        "@codemirror/language": "6.10.3",
        "@codemirror/search": "6.5.6",
        "@codemirror/state": "6.4.1",
        "@codemirror/view": "6.34.1",
        "@lezer/highlight": "1.2.1",
        "@tauri-apps/api": "2.0.2",
        "@tauri-apps/plugin-http": "2.0.0",
        "bits-ui": "0.21.16",
        "clsx": "2.1.1",
        "cmdk-sv": "0.0.18",
        "codemirror": "6.0.1",
        "lucide-svelte": "0.452.0",
        "mode-watcher": "0.4.1",
        "paneforge": "0.0.6",
        "svelte-radix": "1.1.1",
        "svelte-sonner": "0.3.28",
        "tailwind-merge": "2.5.4",
        "tailwind-variants": "0.2.1"
    }
}
